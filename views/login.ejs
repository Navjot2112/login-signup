                <label for="name">Name</label>
                <input type="text" id="name" name="username" placeholder="enter" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="name">password</label>
                <input type="password" id="name" name="password" placeholder="enter" required autocomplete="off">
